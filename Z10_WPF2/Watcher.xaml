<Window x:Class="Z10_WPF2.Watcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z10_WPF2"
        mc:Ignorable="d"
        Title="Watcher" Height="450" Width="800">
    <Grid>
        <Button Content="Choose file" HorizontalAlignment="Right" Margin="620,10,10,0" VerticalAlignment="Top" Width="150" Height="20" Click="Button_Click"/>
        <TextBox x:Name="fileContentTextBox" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Content}" VerticalAlignment="Top" Width="610"/>
        <Button Content="Refresh" HorizontalAlignment="Right" Margin="620,40,10,0" VerticalAlignment="Top" Width="150" Height="20" Click="Button_Click_1"/>
    </Grid>
</Window>
